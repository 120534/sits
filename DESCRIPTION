     roxygen2,
     lubridate,
     zoo,
     stringr,
     mgcv,
     raster,
     rgeos,
     shapefiles,
     sp,
     signal,
     ptw,
     dtwclust,
     reshape2,
     magrittr,
     tidyverse,
     wtss.R,
     dtwSat
RoxygenNote: 6.0.0
